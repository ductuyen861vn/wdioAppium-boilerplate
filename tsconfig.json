{
    "compilerOptions": {
        "sourceMap": false,
        "target": "ESNext",
        "module": "NodeNext",
        "moduleResolution": "Node16",
        "removeComments": true,
        "noImplicitAny": true,
        "strictPropertyInitialization": true,
        "strictNullChecks": true,
        "noEmit": true,
        "allowImportingTsExtensions": true,
        "types": [
            "node",
            "@wdio/types",
            "@wdio/globals/types",
            "@wdio/mocha-framework",
            "expect-webdriverio",
            "@wdio/sauce-service",
        ]
    },
    "include": [
        "./config/**/*.ts",
        "./tests/**/*.ts"
    ],
    "ts-node": {
        // Tell ts-node CLI to install the --loader automatically, explained below
        "esm": true
    }
}
